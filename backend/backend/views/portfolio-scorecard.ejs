<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="initial-scale=1, width=device-width" />

  <link rel="stylesheet" href="/css/global.css" />
  <link rel="stylesheet" href="/css/scorecard.css" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inria Serif:wght@300&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Kumbh Sans:wght@400&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" />
</head>
<style>
  /* Modal container */
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0, 0, 0);
    background-color: rgba(0, 0, 0, 0.4);
  }

  /* Modal content */
  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 300px;
    text-align: center;
  }

  /* Close button */
  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>

<body>
  <div class="portfolio-scorecard">
    <header class="navigation-bar-parent">
      <div class="navigation-bar">
        <div class="navigation-panel4">
          <div class="left-panel">
            <img class="logo-icon3" loading="lazy" alt="" src="/assets/Portfolio/logo1.svg" />
          </div>
          <nav class="search-box10">
            <nav class="my-space-portfolio">
              <div class="home4"><a href="/">Home</a></div>
              <div class="portfolio3">Portfolio</div>
              <div class="trade3"><a href="/trade">Trade</a></div>
              <div class="leaderboard3">Leaderboard</div>
              <div class="rules3">Rules</div>
              <div class="my-investments3">My Investments</div>
            </nav>
          </nav>
          <div class="edit-profile">
            <div class="search-box11">
              <img class="search-icon5" alt="" src="/assets/Portfolio/search.svg" />

              <input class="frame-input" placeholder="Search Stocks, MFs, Bonds, etc" type="text" />
            </div>
          </div>
          <div class="profile-wrapper">
            <img class="profile-icon2" loading="lazy" alt="" src="/assets/Portfolio/profile.svg" />
          </div>
        </div>
      </div>
      <div class="tagline6">
        <div class="tagline7">#Tagline...</div>
      </div>
    </header>
    <main class="portfolio-scorecard-inner">
      <section class="frame-parent10">
        <div class="frame-wrapper3">
          <div class="my-space-parent">
            <div class="my-space">My Space</div>
            <div class="portfolio4">Portfolio</div>
            <div class="order-book">Order Book</div>
            <div class="profit-loss">Profit & Loss Statement</div>
          </div>
        </div>
        <div class="intraday-sell-button">
          <div class="intraday-sell-button-inner">
            <div class="profile-edit-parent">
              <img class="profile-edit-icon" loading="lazy" alt="" src="/assets/Portfolio/profile-edit.svg" />

              <div class="frame-wrapper4">
                <div class="username-rank-parent">
                  <h3 class="username-rank">
                    <span>“username” </span>
                    <span class="rank">(#rank)</span>
                  </h3>
                  <div class="joined-wrapper">
                    <div class="joined-">Joined ____</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <button class="search-box12" onclick="resetPortfolio()">
            <div class="reset-your-portfolio">Reset your portfolio</div>
          </button>

          <!-- Modal Structure -->
          <div id="portfolioModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <p>Your portfolio has been successfully reset!</p>
            </div>
          </div>
        </div>
        <div class="scorecard-comp">
          <form class="activities-messages-my-leagues">
            <div class="activities-component">
              <div class="scorecard4">
                <div class="scorecard-inner"></div>
                <div class="scorecard5">
                  <button class="scorecard6">
                    <div class="scorecard7">SCORECARD</div>
                  </button>
                </div>
                <button class="activities2">
                  <div class="activities3">
                    <a href="/portfolio/activities">ACTIVITIES</a>
                  </div>
                </button>
                <button class="messages2">
                  <div class="messages3">MESSAGES</div>
                </button>
                <button class="my-leagues">
                  <div class="my-leagues1">MY LEAGUES</div>
                </button>
              </div>
              <div class="buy-button">
                <div class="sell-button">
                  <div class="select-portfolio-frame">
                    <div class="select-portfolio2">Select Portfolio</div>
                  </div>
                  <div class="search-box13">
                    <div class="forum-links">
                      <div class="portfolio-name2">Portfolio name</div>
                    </div>
                    <img class="icons6" alt="" src="/assets/Portfolio/icons.svg" />
                  </div>
                </div>
              </div>
            </div>
            <div class="trade-box">
              <div class="rectangle-parent12">
                <div class="frame-child15"></div>
                <b class="intraday-trade">Intraday Trade</b>
              </div>
              <div class="cash-holdings">
                <div class="balance-limit-wrapper">
                  <div class="balance-limit">
                    <div class="balance-limit-inner">
                      <div class="cash-in-hand-parent">
                        <div class="cash-in-hand">
                          <div class="balance-limit1">Balance Limit</div>
                          <div class="intraday-buy">Intraday Buy</div>
                          <div class="intraday-sell">Intraday Sell</div>
                        </div>
                        <div class="parent">
                          <b class="b1">
                            <%= user.balance %>
                          </b>
                          <b class="b2">
                            <%= user.buyValue %>
                          </b>
                          <b class="b3">
                            <%= user.sellValue %>
                          </b>
                        </div>
                      </div>
                    </div>
                    <div class="footer3">
                      <div class="footer-child"></div>
                      <b class="cash-holdings1">Cash Holdings</b>
                      <b class="b4">1,00,00,000.00</b>
                    </div>
                    <div class="balance-limit-child">
                      <div class="frame-parent11">
                        <div class="frame-wrapper5">
                          <div class="cash-in-hand-group">
                            <div class="cash-in-hand1">Cash In Hand</div>
                            <div class="intraday-sell1">Intraday Sell</div>
                          </div>
                        </div>
                        <div class="frame-parent12">
                          <div class="group">
                            <b class="b5">1,00,00,000.00</b>
                            <div class="text-wrapper">
                              <div class="text"></div>
                            </div>
                          </div>
                          <b class="b6">0</b>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="footer-content-parent">
                  <div class="footer-content"></div>
                  <div class="div1">100%</div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </section>
    </main>
    <footer class="footer-wrapper">
      <div class="footer4">
        <div class="forum-container">
          <div class="forum3">Forum</div>
          <div class="feedback3">Feedback</div>
          <div class="disclaimer3">Disclaimer</div>
          <div class="privacy-policy3">Privacy Policy</div>
          <div class="terms-conditions3">Terms & Conditions</div>
          <div class="about-us3">About Us</div>
          <div class="contact-us3">Contact Us</div>
          <div class="powered-by-iem2">Powered by IEM</div>
        </div>
      </div>
    </footer>
  </div>
  <script>
    function resetPortfolio() {
      fetch("/reset-portfolio", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            showModal();
          } else {
            console.error("Failed to reset portfolio.");
          }
        })
        .catch((error) => {
          console.error("Error:", error);
        });
    }

    function showModal() {
      var modal = document.getElementById("portfolioModal");
      var closeBtn = document.getElementsByClassName("close")[0];

      modal.style.display = "block";

      // Close the modal when the user clicks on <span> (x)
      closeBtn.onclick = function () {
        modal.style.display = "none";
      };

      // Close the modal when the user clicks anywhere outside of the modal
      window.onclick = function (event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      };
    }
  </script>
</body>

</html>